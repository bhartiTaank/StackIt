<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/sdp_10"
    android:layout_marginTop="@dimen/sdp_5"
    android:layout_marginEnd="@dimen/sdp_10"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sdp_10"
            android:textColor="@color/prussianBlue"
            android:textSize="@dimen/ssp_18"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="How to Read Data from Firebase Database and Display Multiple Fields in ListView with ArrayAdapter" />

        <TextView
            android:id="@+id/askedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sdp_10"
            android:text="@string/asked_by"
            android:textColor="@color/prussianBlue"
            android:textSize="@dimen/ssp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/answerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sdp_20"
            android:text="@string/answer_count"
            android:textColor="@color/prussianBlue"
            android:textSize="@dimen/ssp_16"
            app:layout_constraintStart_toEndOf="@id/askedBy"
            app:layout_constraintTop_toTopOf="@id/askedBy" />

        <TextView
            android:id="@+id/viewed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sdp_20"
            android:drawablePadding="@dimen/sdp_3"
            android:textColor="@color/prussianBlue"
            android:textSize="@dimen/ssp_16"
            app:drawableStartCompat="@drawable/ic_viewed"
            app:layout_constraintStart_toEndOf="@id/answerCount"
            app:layout_constraintTop_toTopOf="@id/askedBy" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
